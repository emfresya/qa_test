# Django settings
DJANGO_SETTINGS_MODULE=monitoring_systems.settings
SECRET_KEY=your_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# MySQL settings
MYSQL_HOST=db                    # В Docker используйте имя сервиса 'db', локально — 'localhost'
MYSQL_PORT=3306
MYSQL_DB=monitoring
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=rootpassword

# Redis settings
REDIS_HOST=redis                 # В Docker используйте имя сервиса 'redis', локально — 'localhost'
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0   # Полный URL для Celery
